<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view_login_activity"
    style="@style/MatchParent"
    android:layout_marginLeft="@dimen/login_padding_left_right"
    android:layout_marginRight="@dimen/login_padding_left_right"
    android:orientation="vertical">

    <TextView
        style="@style/MatchWidth"
        android:paddingTop="@dimen/login_padding_actionbar"
        android:text="@string/login_welcoming_message" />

    <EditText
        android:id="@+id/login"
        style="@style/MatchWidth"
        android:hint="@string/login_hint_login"
        android:paddingTop="@dimen/login_padding_top"
        android:singleLine="true"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/user_name"
        style="@style/MatchWidth"
        android:hint="@string/login_hint_username"
        android:paddingTop="@dimen/login_padding_top"
        android:singleLine="true"
        android:textSize="16sp" />
</LinearLayout>