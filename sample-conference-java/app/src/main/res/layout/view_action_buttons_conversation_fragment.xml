<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_action_buttons"
    style="@style/MatchWidth"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="8dp"
    android:paddingBottom="50dp"
    android:background="@drawable/call_control_buttons_background"
    android:gravity="top|center_horizontal"
    android:orientation="horizontal">

    <ToggleButton
        android:id="@+id/tb_switch_mic"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@null"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:drawableTop="@drawable/selector_toggle_mic"
        android:checked="true"
        tools:checked="true"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:textAllCaps="false"
        android:textScaleX="0.9"
        android:textOff="Unmute"
        android:textOn="Mute" />

    <ToggleButton
        android:id="@+id/tb_switch_cam"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@null"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:drawableTop="@drawable/selector_toggle_cam"
        android:checked="true"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textScaleX="0.9"
        android:textOff="Cam on"
        android:textOn="Cam off"
        android:visibility="visible" />

    <ToggleButton
        android:id="@+id/tb_end_call"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@null"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:drawableTop="@drawable/ic_end_call"
        android:checked="true"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textScaleX="0.9"
        android:textOff="End call"
        android:textOn="End call"/>


    <ToggleButton
        android:id="@+id/tb_screen_share"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@null"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:drawableTop="@drawable/selector_toggle_screenshare"
        android:checked="true"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textScaleX="0.9"
        android:textOff="Stop sharing"
        android:textOn="Screen share"
        android:visibility="visible" />

    <ToggleButton
        android:id="@+id/tb_swap_cam"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@null"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:drawableTop="@drawable/selector_toggle_swap_cam"
        android:checked="true"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textScaleX="0.9"
        android:textOff="Swap cam"
        android:textOn="Swap cam"
        android:visibility="visible" />
</LinearLayout>