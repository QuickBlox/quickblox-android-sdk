<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/splash_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:longClickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/qb_splash_bg"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/splash_hero"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/splash_app_title"
        android:layout_above="@+id/splash_qb_link"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:focusableInTouchMode="false"
        android:scaleType="fitCenter"
        android:src="@drawable/qb_splash_hero"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@id/splash_qb_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/qb_splash_link" />

    <TextView
        android:id="@+id/splash_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="Messages"
        android:textColor="#ffffff"
        android:textSize="50sp" />

</RelativeLayout>
