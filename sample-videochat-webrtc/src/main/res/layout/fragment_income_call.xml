<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/fragmentIncomeCall"
    style="@style/MatchParent"
    >

    <LinearLayout
        android:id="@+id/info_about_call"
        style="@style/MatchWidth"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/action_bar_height"
        >

        <ImageView
            android:id="@+id/caller_avatar"
            style="@style/CallerAvatar"
            />

        <TextView
            android:id="@+id/caller_name"
            style="@style/WrapContent"
            android:textColor="@color/caller_name_text_color"
            android:textSize="@dimen/caller_name_text_size"
            android:text="User Name"
            android:maxLines="1"
            android:maxLength="25"
            android:paddingTop="20dp"
            />

        <TextView
            android:id="@+id/call_type"
            style="@style/WrapContent"
            android:textColor="@color/call_type_text_color"
            android:textSize="@dimen/incoming_call_type_text_size"
            android:text="@string/incoming_audio_call"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/also_on_call"
            style="@style/WrapContent"
            android:textColor="@color/also_on_call_text_color"
            android:textSize="@dimen/also_on_call_text_size"
            android:text="@string/also_on_call"
            android:layout_marginTop="48dp"
            />

        <TextView
            android:id="@+id/other_inc_users"
            style="@style/WrapContent"
            android:textColor="@color/other_inc_users_text_color"
            android:textSize="@dimen/other_inc_users_text_size"
            android:layout_marginTop="10dp"
            android:text="User 1, User 2, User 3"
            />

    </LinearLayout>

    <RelativeLayout
        style="@style/WrapContent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="@dimen/padding_bottom"
        >

        <ImageButton
            android:id="@+id/reject_call"
            style="@style/EndCallImageButton"
            />

        <ImageButton
            android:id="@+id/take_call"
            style="@style/TakeCallImageButton"
            android:src="@drawable/ic_call"
            android:layout_toEndOf="@id/reject_call"
            android:layout_marginStart="@dimen/income_call_buttons_margin"
            tools:ignore="RtlCompat" />

    </RelativeLayout>
</RelativeLayout>