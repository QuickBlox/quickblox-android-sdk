<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="VideoChatTheme" parent="AppTheme">
        <item name="colorAccent">@color/blue_accent</item>
        <item name="colorControlActivated">@color/blue_accent</item>
        <item name="colorControlHighlight">@color/blue_accent</item>
        <item name="colorControlNormal">@color/blue_accent</item>

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>

        <item name="android:windowBackground">@color/background_app_color</item>
    </style>

    <style name="AppTheme.BlueAccent">
        <item name="colorAccent">@color/blue_accent</item>
    </style>

    <style name="ListItemIconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/list_item_side_margin</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="DialogNameStyle" parent="MatchWidth">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>