<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/movie_cover_imageview"
        android:layout_width="@dimen/movie_cover_big_width"
        android:layout_height="@dimen/movie_cover_big_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_middle" />

    <TextView
        android:id="@+id/movie_description_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_cover_imageview"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/padding_middle" />

    <RatingBar
        style="?android:attr/ratingBarStyle"
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movie_description_imageview"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_middle"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="1" />

    <Button
        android:id="@+id/rate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_middle"
        android:onClick="onClick"
        android:text="@string/rate" />
</RelativeLayout><!-- From: file:/D:/Workspace/Android/git/quickblox-android-sdk/sample-ratings/res/layout/activity_movie.xml -->